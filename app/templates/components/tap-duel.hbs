{{#tap-duel-vote
	class="TapDuel-left"
	width=leftPercentage
	onClick=(action "castVote" "votesForLeft") as |val|}}
	{{liquid-bind (concat val "%") use="toUp"}}
{{/tap-duel-vote}}

{{#tap-duel-vote
	class="TapDuel-right"
	width=rightPercentage
	onClick=(action "castVote" "votesForRight") as |val|}}
	{{liquid-bind (concat val "%") use="toUp"}}
{{/tap-duel-vote}}

<footer>
	{{#if votingFinished}}
		{{#if isTie}}
			Tie!
		{{else}}
			{{winningVote}} won!
		{{/if}}
	{{else}}
		<!-- {{totalVotes}}<br>{{winningVote}} is winning -->
		{{votesLeft}} votes left
	{{/if}}
	{{yield}}
</footer>